extends ../../layout/layout
include ../../components/info-block-8/info-block-8
include ../../components/info-block-1/info-block-1
include ../../components/gallery/gallery
include ../../components/competence/competence
include ../../components/competence-mobile/competence-mobile
include ../../components/advantages/advantages
include ../../components/documentation-certificates/documentation-certificates
include ../../components/projects/projects
include ../../components/adjacent-page/adjacent-page
include ../../components/feedback/feedback
include ../../components/static-footer/static-footer

block content
    div#barba-wrapper
        .barba-container(data-namespace='service')
            +info-block-8({
              title: 'Реконструкция энергетических объектов до&nbsp;500&nbsp;кВ, монтаж и&nbsp;наладка электрооборудования',
              image: './images/head.jpg'
            })
            +info-block-1({
              title: 'Описание',
              text1: 'Мы&nbsp;берем на&nbsp;себя ответственность за&nbsp;весь производственный цикл работ.',
              text2: '&laquo;Таврида Энерго Строй&raquo; на&nbsp;высоком уровне может выступать и&nbsp;как субподрядная организация, отвечающая за&nbsp;отдельный участок работ, и&nbsp;в&nbsp;качестве генерального подрядчика.'
            })(class='info-block-1_offset-vertical-top')
            +gallery({
              total: '03',
              data: data.gallery.service3
            })
            .container-fluid.service-3__text-1
                .row
                    .col-md-6.offset-md-1.tpg__p1 Компания обладает допусками к&nbsp;выполнению 240 видов работ, в&nbsp;том числе на&nbsp;особо опасных объектах.
            +competence({
              title: 'В&nbsp;структуру компании входят подразделения',
              bgText: 'Службы',
              slides: data.service3.kit,
              pageNavItem: 'Область компетенций'
            })
            +competence-mobile({
              title: 'В&nbsp;структуру компании входят подразделения',
              bgText: 'Службы',
              slides: data.service3.kit,
              total: '02'
            })
            +advantages({
              title: 'Преимущества',
              total: '03',
              data: data.advantages.service3,
              white: true
            })
            +projects.projects_product
            +adjacent-page({
              title: 'Строительство ТП&nbsp;и&nbsp;РП среднего класса напряжений 35, 6(10) кВ',
              hrefBack: '#',
              hrefNext: '#',
              anchor: 'Назад к услугам',
              bg: './images/page-next.jpg'
            })
            +feedback
            +static-footer
